<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DiningHallsActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbar"
            layout="@layout/actionbar" />

        <fragment
                  android:id="@+id/dashboardFragment"
                  android:name="com.dmitribrereton.bhealth.DashboardFragment"
                  tools:layout="@layout/fragment_dashboard"
                  android:layout_width="match_parent"
                  android:layout_height="227dp"/>

        <fragment
            android:id="@+id/diningHallsFragment"
            android:name="com.dmitribrereton.bhealth.DiningHallsFragment"
            tools:layout="@layout/fragment_dininghalls"
            android:layout_width="match_parent"
            android:layout_height="260dp"/>

    </LinearLayout>

</RelativeLayout>
